<div class="field">
  <%= f.label 'Enter your age' %>
  <%= f.select :age, (@age_ranges), include_blank: true %>
</div>

<div class="field">
  <%= f.label 'Location' %>
  <%= f.text_area :location %>
</div>


<%= f.fields_for :hobbies do |r| %>
  <div class="field">
    <%= r.label :hobbies %>
    <%= r.select :name, (@hobbies), include_blank: true %>
  </div>
<% end %>

<%= f.fields_for :languages do |r| %>
  <%= render 'form_partials/language_fields', f: r %>
<% end %>
<%= link_to_add_association 'add language', f, :languages, partial: 'form_partials/language_fields' %>

<%= f.fields_for :cultural_backgrounds do |r| %>
<div class="field">
  <%= r.label :background %>
  <%= r.select :background, (@cultural_background),  include_blank: true %>
</div>
<% end %>


<%= f.fields_for :interactions do |r| %>
  <div class="field">
    <%= r.label :interaction %>
    <%= r.select :interaction, (@interaction),  include_blank: true %>
  </div>
<% end %>

<h2>School and Work Info</h2>
<%= f.fields_for :schoolings do |r| %>
  <div class="field">
    <%= r.label "Name of School" %>
    <%= r.select :name, (@school),  include_blank: true  %>
  </div>
  <div class="field">
    <%= r.label :level %>
    <%= r.select :level, (@level), include_blank: true  %>
  </div>
  <div class="field">
    <%= r.label :specialization %>
    <%= r.select :specialization, (@specialization),  include_blank: true  %>
  </div>
<% end %>

<%= f.fields_for :work_experiences do |r| %>
  <div class="field">
    <%= r.label :industry %>
    <%= r.select :industry, (@industry),  include_blank: true %>
  </div>
<% end %>
