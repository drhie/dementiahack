<p id="notice"><%= notice %></p>

<h1><%= @pwd.first_name %>
<%= @pwd.last_name %></h1>
<% if @pwd.hobbies.any? %>
  <div class="field">
    <h4>Your hobbies:</h4>
    <% @pwd.hobbies.each do |hobby| %>
      <p><%= hobby.name %></p>
    <% end %>
  </div>
<% end %>

<% if @pwd.schoolings.any? %>
  <div class="field">
    <h4>Your schooling information:</h4>
    <% @pwd.schoolings.each do |schooling| %>
      <p><%= schooling.name %></p>
      <p><%= schooling.level %></p>
      <p><%= schooling.specialization %></p>
    <% end %>
  </div>
<% end %>

<% if @pwd.languages.any? %>
  <div class="field">
    <h4>Your languages:</h4>
    <% @pwd.languages.each do |language| %>
      <p><%= language.language %></p>
    <% end %>
  </div>
<% end %>

<% if @pwd.cultural_backgrounds.any? %>
  <div class="field">
    <h4>Your cultural background:</h4>
    <% @pwd.cultural_backgrounds.each do |cultural_background| %>
      <p><%= cultural_background.background %></p>
    <% end %>
  </div>
<% end %>

<% if @pwd.work_experiences.any? %>
  <div class="field">
    <h4>Your industry:</h4>
    <% @pwd.work_experiences.each do |industry| %>
      <p><%= industry.industry %></p>
    <% end %>
  </div>
<% end %>

<% if @pwd.availabilities.any? %>
  <div class="field">
    <h4>Your availabilities:</h4>
    <% @pwd.availabilities.each do |availability| %>
      <p><%= availability.timeslot %></p>
    <% end %>
  </div>
<% end %>

<% if @pwd.to_teach != "" %>
  <div class="field">
    <h4>You want to teach this:</h4>
    <%= @pwd.to_teach %>
  </div>
<% end %>


<%= link_to 'Edit', edit_pwd_path(@pwd) %> |
<%= link_to 'Back', pwds_path %> |
<%= link_to 'Set Up Profile', new_pwd_profile_path %> |
<%= link_to 'Set Availability', new_pwd_availability_path %> |
<%= link_to 'Log Out', session_path('vanilla mint'), method: :delete %>
